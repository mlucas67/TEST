SUBROUTINE DIFFDATA( OUTDATA, INITDATA )
    
    IF NOT( ASSIGNED( INITDATA ) ) THEN INITDATA = ''
    IF NOT( ASSIGNED( OUTDATA ) ) THEN OUTDATA = ''
    OUTDATA<3> = LOWER( INITDATA )
    OUTDATA<1> = DCOUNT( INITDATA, @FM )
    OUTDATA<2> = STR( "0":@VM, OUTDATA<1>+1 ) : "0"
    
    RETURN
    
END ;* DIFFDATA
