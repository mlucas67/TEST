text = ""
btext = ''
for i = len( text ) to 1 step -1
    btext := text[i,1]
next i
length = 0
ltext = ''
for i = 1 to len( btext )
    for j = 2 to len( btext )-i
        ltext = btext[i,j]
        if (index( text, ltext, 1 )) then 
            if (j > length) then 
                length = j
                crt i : ", " : j : ", " : ltext
            end
        end
    next j
next i
