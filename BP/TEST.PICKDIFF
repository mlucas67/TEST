EQU FALSE TO 0
EQU TRUE TO 1

A = RAISE( "abcdefghijkl" )
B = RAISE( "0123456789" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST1, DIFFS )
CALL ASSERT( RET, TEST1 = "11.9.1.1*", "all-changes test" )
DISPLAY TEST1 : " -> " : RET

A = RAISE( "abcdefghijkl" )
B = A 
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST2, DIFFS )
CALL ASSERT( RET, TEST2 = "", "all-same test" )
DISPLAY TEST2 : " -> " : RET

A = RAISE( "abcdef" )
B = RAISE( "bcdefx" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST3, DIFFS )
CALL ASSERT( RET, TEST3 = "1.0.1.1*0.1.6.5*", "snake test" )
DISPLAY TEST3 : " -> " : RET

A = CONVERT( ',', @FM, "c1,a,c2,b,c,d,e,g,h,i,j,c3,k,l" )
B = CONVERT( ',', @FM, "C1,a,C2,b,c,d,e,I1,e,g,h,i,j,C3,k,I2,l" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST4, DIFFS )
CALL ASSERT( RET, TEST4 = "1.1.1.1*1.1.3.3*0.2.8.8*1.1.12.14*0.1.14.16*", "repro20020920 test" )
DISPLAY TEST4 : " -> " : RET

A = CONVERT( ',', @FM, "F" )
B = CONVERT( ',', @FM, "0,F,1,2,3,4,5,6,7" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST5, DIFFS )
CALL ASSERT( RET, TEST5 = "0.1.1.1*0.6.2.3*", "repro20030207 test" )
DISPLAY TEST5 : " -> " : RET

A = CONVERT( ',', @FM, "HELLO,WORLD" )
B = CONVERT( ',', @FM, ",,hello,,,,world," )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST6, DIFFS )
CALL ASSERT( RET, TEST6 = "1.7.1.1*", "repro20030409 test" )
DISPLAY TEST6 : " -> " : RET

A = CONVERT( ',', @FM, "a,b,-,c,d,e,f,f" )
B = CONVERT( ',', @FM, "a,b,x,c,e,f" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST7, DIFFS )
CALL ASSERT( RET, TEST7 = "1.1.3.3*1.0.5.5*1.0.7.6*", "some-changes test" )
DISPLAY TEST7 : " -> " : RET

A = CONVERT( ',', @FM, "a,a,a,a,a,a,a,a,a,a" )
B = CONVERT( ',', @FM, "a,a,a,a,-,a,a,a,a,a" )
CALL DIFFTEXT( DIFFS, A, B, FALSE, FALSE, FALSE )
CALL TESTHELPER( TEST8, DIFFS )
CALL ASSERT( RET, TEST8 = "0.1.5.5*1.0.9.10*", "long chain of repeats test" )
DISPLAY TEST8 : " -> " : RET

END
